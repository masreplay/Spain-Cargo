                        android:text="Age"
                        android:textColor="@color/carbon_grey_700"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/tv_birthDateLabel"
                        app:layout_constraintTop_toBottomOf="@id/tv_birthDateLabel"


                        />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:singleLine="true"
                        android:text="25 years"
                        android:textColor="@color/carbon_black"
                        android:textSize="15sp"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
