<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.enjaz.hr.data.model.Types" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="clickListener"
            type="com.enjaz.hr.ui.sendRequest.RequestMainTypesFragment" />

    </data>

    <carbon.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/carbon_grid8"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:onClick="@{()->clickListener.onTypeClick(item)}"
        app:carbon_rippleColor="@color/blue_light">

        <ImageView
            android:id="@+id/iv"
            ivType="@{item.type}"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/carbon_grey_800"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/iv"
            app:layout_constraintStart_toEndOf="@id/iv"
            app:layout_constraintTop_toTopOf="@id/iv">

            <carbon.widget.TextView
                android:id="@+id/tv_leave_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.type,default=Vacation}"

                android:textColor="@color/carbon_grey_800"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </carbon.widget.ConstraintLayout>
</layout>