<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.enjaz.hr.data.model.Types" />
        <variable
            name="position"
            type="Integer" />
        <variable
            name="clickListener"
            type="com.enjaz.hr.ui.sentRequest.RequestTypeFragment" />

    </data>

    <carbon.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_margin="@dimen/carbon_grid8"
        android:onClick="@{()->clickListener.onTypeClick(item)}"
        app:carbon_rippleColor="@color/blue_light"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tint="@color/carbon_grey_800"
            ivType="@{item.type}"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/iv"
            app:layout_constraintStart_toEndOf="@id/iv"
            app:layout_constraintTop_toTopOf="@id/iv"
            >

        <carbon.widget.TextView
            android:id="@+id/tv_leave_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/carbon_grey_800"

            android:text="@{item.type,default=Vacation}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14sp"
           />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </carbon.widget.ConstraintLayout>
</layout>