<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.enjaz.hr.ui.sentRequest.SendRequestViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kizitonwose.calendarview.CalendarView
            android:id="@+id/exFourCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:cv_dayViewResource="@layout/calendar_day_layout"
            app:cv_inDateStyle="allMonths"
            app:cv_orientation="horizontal"
            app:cv_outDateStyle="endOfRow"
            app:cv_scrollMode="paged"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/legendLayout" />

        <include
            android:id="@+id/legendLayout"
            layout="@layout/calendar_day_legend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_leave_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Type of leaves"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exFourCalendar"

            />
        
        <org.angmarch.views.NiceSpinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/carbon_grid8"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/carbon_grey_100"
            app:arrowDrawable="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:arrowTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_leave_type"
            app:layout_constraintTop_toBottomOf="@id/tv_leave_type"
            app:textTint="@color/carbon_grey_800"

            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lyt_hourly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/tv_leave_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinner"

            >

   <TextView
       android:id="@+id/tv_from"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
   android:layout_marginTop="16dp"
       android:text="From"
       android:textColor="@color/black"
       android:textSize="14sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       />

        <carbon.widget.TextView
            android:id="@+id/tv_timePickerStart"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey_100"
            android:gravity="center_vertical"
            android:onClick="@{()->viewModel.navigator.dialogTimePickerLightStart()}"
            android:padding="4dp"
            android:text="Select time"
            android:layout_marginEnd="16dp"
            app:carbon_cornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_from"
            app:layout_constraintTop_toBottomOf="@id/tv_from"
/>
        <TextView
            android:id="@+id/tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_timePickerStart"
            />

        <carbon.widget.TextView
            android:id="@+id/tv_timePickerEnd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey_100"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:onClick="@{()->viewModel.navigator.dialogTimePickerLightEnd()}"
            android:padding="4dp"
            android:text="Select time"
            app:carbon_cornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/tv_to"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_reasonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_leave_type"
            app:layout_constraintTop_toBottomOf="@id/lyt_hourly"

            />

        <carbon.widget.EditText
            android:id="@+id/tv_reason"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:background="@color/carbon_grey_100"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="top"
            android:layout_marginTop="8dp"

            android:hint="Type your reason here ..."
            android:padding="8dp"
            app:carbon_cornerRadius="4dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_reasonTitle"
            app:layout_constraintTop_toBottomOf="@id/tv_reasonTitle"


            />

        <carbon.widget.Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Apply For Leave"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:carbon_cornerRadius="4dp"
            app:carbon_rippleColor="@color/blue_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_reason"
            app:layout_constraintStart_toStartOf="@id/tv_reason"
            app:layout_constraintTop_toBottomOf="@id/tv_reason"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>