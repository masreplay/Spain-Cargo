<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.enjaz.hr.data.model.salary.Item" />

        <variable
            name="clickListener"
            type="com.enjaz.hr.ui.profile.SalaryDetailsFragment" />
    </data>

    <carbon.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/carbon_white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{()->clickListener.onItemClick(item)}"
        app:carbon_cornerRadius="8dp">


        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@{item.dateFormatted}"
            android:textColor="@color/carbon_grey_800"
            app:layout_constraintStart_toStartOf="@+id/tv_total_salaryL"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/carbon_grey_200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_start_date" />


        <TextView
            android:id="@+id/tv_total_salaryL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/total_salary"
            android:textColor="@color/carbon_grey_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator"

            />

        <TextView
            android:id="@+id/tv_total_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@{item.amount}"
            android:textColor="@color/green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_total_salaryL"
            app:layout_constraintTop_toBottomOf="@id/tv_total_salaryL"

            />


        <TextView
            android:id="@+id/tv_total_deductionL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/total_deduction"
            android:textColor="@color/carbon_grey_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator" />

        <TextView
            android:id="@+id/tv_total_deduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"
            android:text="@{item.totalDeductionFormatted}"
            android:textColor="@color/red"
            app:layout_constraintStart_toStartOf="@id/tv_total_deductionL"
            app:layout_constraintTop_toBottomOf="@id/tv_total_salaryL"

            />

    </carbon.widget.ConstraintLayout>
</layout>