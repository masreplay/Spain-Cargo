<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="position"
            type="Integer" />

        <variable
            name="clickListener"
            type="com.enjaz.hr.ui.attendance.AttendanceFragment" />

        <variable
            name="item"
            type="com.enjaz.hr.data.model.DateItem" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:background='@{item.is_selected?@drawable/bg_rect:@drawable/bg_rect_transparent}'
        android:gravity="center"
        android:onClick="@{()->clickListener.onMyItemClick(position)}"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            android:textColor='@{item.is_selected?@color/colorPrimary:@color/white}'
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020"
            android:textColor='@{item.is_selected?@color/black:@color/white}' />
    </LinearLayout>
</layout>
