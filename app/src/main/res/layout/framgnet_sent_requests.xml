<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.enjaz.hr.ui.requests.RequestsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <LinearLayout
            android:id="@+id/lyt_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:elevation="1dp"
            android:gravity="center"
            android:orientation="vertical"

            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/ic_mail" />

            <TextView
                android:id="@+id/tv_noData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:gravity="center"
                android:text="@string/no_attendance"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/carbon_grey_700"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
        <include
            android:id="@+id/status"
            layout="@layout/view_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:retryListener="@{viewModel.refreshListener}"
            app:viewStatus="@{viewModel.leaveRequestResponse.status}"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            items="@{viewModel.leaveRequestResponse.data}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_sent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>