<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.enjaz.hr.data.model.Request" />

        <variable
            name="clickListener"
            type="com.enjaz.hr.ui.requests.SentRequestsFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Yesterday"
            android:textColor="#DADADA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_round_rect_8dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_top">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_round_sent"
                android:backgroundTint="@{item.state==1?@color/orange:item.state==2?@color/green:@color/red}"
                android:drawableEnd="@{item.state==1?@drawable/ic_close:null}"
                android:drawablePadding="16dp"
                android:onClick="@{()->clickListener.onCancelClick()}"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="@{item.name}"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_circle_transparent_300"
                android:backgroundTint="#F683C6"
                android:padding="6dp"
                android:src="@drawable/ic_business_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Type of Leave"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Sick Leave"
                android:textColor="@color/text_grey_600"
                app:layout_constraintStart_toStartOf="@+id/tv_type_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_type_title" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_circle_transparent_300"
                android:backgroundTint="#87ECFC"
                android:padding="6dp"
                android:src="@drawable/ic_reason"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_type" />

            <TextView
                android:id="@+id/tv_reason_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Reason"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Having fever from last night"
                android:textColor="@color/text_grey_600"
                app:layout_constraintStart_toStartOf="@+id/tv_type_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_reason_title" />


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_circle_transparent_300"
                android:backgroundTint="#B787FC"
                android:padding="6dp"
                android:src="@drawable/ic_calender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_reason" />

            <TextView
                android:id="@+id/tv_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Applied Duration"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_type_title"
                app:layout_constraintTop_toTopOf="@+id/imageView6" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="12 Oct, 2019  to  15 Oct, 2019"
                android:textColor="@color/text_grey_600"
                app:layout_constraintStart_toStartOf="@+id/tv_type_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
