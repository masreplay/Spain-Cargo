<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.enjaz.hr.ui.profile.ProfileViewModel" />

    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/carbon_grey_200"

            >

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_avatar"
                        app:civ_border_color="@android:color/white"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ID 4738"
                        android:textColor="@color/carbon_grey_500"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Mohammed Ghassan"
                        android:textColor="@color/carbon_grey_800"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="30dp"
                        android:text="Project Manager"
                        android:textColor="@color/carbon_grey_500"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/carbon_grey_300" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="August 2018"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Month &amp; Year"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/carbon_grey_600"
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/carbon_grey_300" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="32,000,000 IQD"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Net Salary"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/carbon_grey_600"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/carbon_grey_300"/>
                </LinearLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>



        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/carbon_white"
                >
                <TextView
                    android:id="@+id/tv_earnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Earnings"
                    android:textColor="@color/carbon_black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_lbasicSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tv_earnings"
                    app:layout_constraintTop_toBottomOf="@id/tv_earnings"
                    android:layout_marginTop="16dp"
                    android:text="Basic Salary"
                    android:textColor="@color/carbon_grey_800"
                    />
                <TextView
                    android:id="@+id/tv_basicSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_earnings"
                    android:layout_marginTop="16dp"
                    android:text="1,000,000"
                    android:textColor="@color/carbon_grey_800"
                    />
                <TextView
                    android:id="@+id/tv_lumarah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tv_earnings"
                    app:layout_constraintTop_toBottomOf="@id/tv_lbasicSalary"
                    android:layout_marginTop="8dp"
                    android:text="Umarah"
                    android:textColor="@color/carbon_grey_800"
                    />
                <TextView
                    android:id="@+id/tv_umarah"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    app:layout_constraintStart_toStartOf="@id/tv_basicSalary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_basicSalary"
                    android:layout_marginTop="8dp"
                    android:text="20,0000"
                    android:textColor="@color/carbon_grey_800"
                    />
                <TextView
                    android:id="@+id/tv_lbonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tv_earnings"
                    app:layout_constraintTop_toBottomOf="@id/tv_lumarah"
                    android:layout_marginTop="8dp"
                    android:text="Bonus"
                    android:textColor="@color/carbon_grey_800"
                    />

                <TextView
                    android:id="@+id/tv_bonus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tv_basicSalary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_umarah"
                    android:layout_marginTop="8dp"
                    android:text="100,000"
                    android:textColor="@color/carbon_grey_800"
                    />


                <View
                    android:id="@+id/seperator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_lbonus"
                    app:layout_constraintStart_toStartOf="@id/tv_lbonus"
                    android:layout_marginTop="16dp"
                    android:background="@color/carbon_grey_300"
                    />

                <TextView
                    android:id="@+id/tv_deductions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/seperator"
                    android:text="Deductions"
                    android:textColor="@color/carbon_black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_lgosi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tv_deductions"
                    app:layout_constraintTop_toBottomOf="@id/tv_deductions"
                    android:layout_marginTop="16dp"
                    android:text="GOSI"
                    android:textColor="@color/carbon_grey_800"
                    />

                <TextView
                    android:id="@+id/tv_gosi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tv_basicSalary"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_deductions"
                    android:layout_marginTop="16dp"
                    android:text="18,000"
                    android:textColor="@color/carbon_grey_800"
                    />

                <TextView
                    android:id="@+id/tv_lloan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tv_deductions"
                    app:layout_constraintTop_toBottomOf="@id/tv_lgosi"
                    android:layout_marginTop="8dp"
                    android:text="Umarah"
                    android:textColor="@color/carbon_grey_800"
                    />
                <TextView
                    android:id="@+id/tv_loan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    app:layout_constraintStart_toStartOf="@id/tv_gosi"
                    app:layout_constraintTop_toBottomOf="@id/tv_gosi"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:text="20,0000"
                    android:textColor="@color/carbon_grey_800"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
