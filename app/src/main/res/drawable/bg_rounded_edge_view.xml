<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:autoMirrored="true">

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:bottomRightRadius="16dp" android:topRightRadius="16dp" />
                    <solid android:color="#facd39" />
                    <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#facd39" />
                    <corners android:bottomRightRadius="16dp" android:topRightRadius="16dp" />
                    <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#facd39" />
                    <corners android:bottomRightRadius="16dp" android:topRightRadius="16dp" />

                    <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>